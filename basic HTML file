<script>
function myOnclickFunc(){
	if (document.getElementById("demo").innerHTML=="This is Sathyabharathi") {
		document.getElementById("demo").innerHTML="This is not Sathyabharathi"
	} 
	else { 
		document.getElementById("demo").innerHTML="This is Sathyabharathi" 
	} 
}
